---
# (string) Timezone for the servers
timezone: "America/New_York"

ansible_user: ${user}

email: ${email}
default_pass: ${default_pass}
crypted_pass: ${crypted_pass}

domain: ${domain}

packages:
  - apparmor-utils
  - apt-transport-https
  - arptables
  - ca-certificates
  - cifs-utils
  - curl
  - ebtables
  - gdisk
  - gnupg
  - hdparm
  - htop
  - iputils-ping
  - intel-gpu-tools
  - ipvsadm
  - lm-sensors
  - lsscsi
  - lvm2
  - multipath-tools
  - nano
  - net-tools
  - nfs-common
  - ntpdate
  - nut-client
  - nvme-cli
  - open-iscsi
  - psmisc
  - python3-kubernetes
  - python3-yaml
  - scsitools
  - sg3-utils
  - smartmontools
  - socat
  - software-properties-common
  - unattended-upgrades
  - unzip

packages_remove:
  # - apparmor
  - apport
  - bcache-tools
  - btrfs-progs
  - byobu
  - cloud-init
  - cloud-guest-utils
  - cloud-initramfs-copymods
  - cloud-initramfs-dyn-netconf
  - friendly-recovery
  - fwupd
  - landscape-common
  - lxd-agent-loader
  - ntfs-3g
  - open-vm-tools
  - plymouth
  - plymouth-theme-ubuntu-text
  - popularity-contest
  - snapd
  - sosreport
  - tmux
  - ubuntu-advantage-tools
  - ufw

nut:
  nut_config_path: /etc/nut
  nut_user: nut
  nut_mode: netclient
  ups_name: PR1500RT2U
  nut_server_host: 10.2.0.1
  nut_monitor_user: monuser
  # nut_monitor_pass: ${nut_password}
